{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">

        <div class="card mb-12" style="margin-top: 70px">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h1 class="card-title text-success ">{{ product.name }}</h1>
                        <p class="card-text">{{ product.description }}</p>
                        <h3>{{ product.price }} EUR</h3>
                        <form action="{{ path('app_cart_add', {'id': product.id}) }}" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-success">
                                Ajouter au panier
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <h2>Derniers produits ajout√©s</h2>

        <div class="row">
            {% for product in products %}
                <div class="col-md-3">
                    <div class="card" style="width: 18rem;">
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <a style="text-decoration: none; color:green " href="{{ path('app_home_product_show', {'id': product.id}) }}">
                                <h5 class="card-title">{{ product.name }}</h5>
                            </a>

                            <p class="card-text text-success">{{ product.description|slice(0,60) }}...</p>
                            <h3 class="product-price">{{ product.price }} EUR</h3>

                            <form action="{{ path('app_cart_add', {'id': product.id}) }}" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-success">
                                    Ajouter au panier
                                </button>
                            </form>


                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
